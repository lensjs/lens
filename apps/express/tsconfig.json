{
  "compilerOptions": {
    "target": "ES2020",                      // safer Node.js target than raw ESNext
    "module": "ESNext",                      // keep modern ESM
    "moduleResolution": "Node",              // resolve node-style imports
    "rootDir": "src",                        // your source lives in src/
    "outDir": "dist",                        // compiled JS goes into dist/
    "strict": true,                          // enable all strict checks
    "esModuleInterop": true,                 // allow default imports for CJS modules
    "skipLibCheck": true,                    // speed up builds, skip .d.ts checking
    "forceConsistentCasingInFileNames": true // avoids case-sensitivity bugs
  },
  "include": ["src"],                        // compile all files inside src/
  "exclude": ["dist", "node_modules"]        // don't compile build output or deps
}

